@model CraftsMarket.Web.ViewModels.Products.CreateProductInputModel
@{
    this.ViewData["Title"] = "Add product";
}
<br />

<form method="post" class="col-md-8 offset-md-2">
    <h1>@this.ViewData["Title"]</h1>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter product name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Write product description here..."></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Enter product price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InStock"></label>
        <input asp-for="InStock" class="form-control" placeholder="Enter available quantity">
        <span asp-validation-for="InStock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Categories"></label>
        <div>
            @Html.DropDownListFor(x => Model.CategoryName, new SelectList(Model.Categories, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    @*<div class="form-group">
            <label asp-for="CategoryName">Category</label>
            <select asp-for="CategoryName" class="form-control" asp-items="Model.Categories">
                <option value="">Chose category</option>
            </select>
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>*@

    <p class="text-danger align-content-lg-center display-1">TODO: Upload pictures</p>

    <br />
    <br />
    @*<div class="form-group">
            <button class="btn btn-info">Please add some pictures</button>
        </div>*@
    <button type="submit" class="btn btn-success">Add product</button>
</form>